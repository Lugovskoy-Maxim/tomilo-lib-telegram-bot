BOT_TOKEN=your_telegram_bot_token_here
API_BASE_URL=https://tomilo-lib.ru/api

# Если бэкенд требует авторизацию для PATCH /chapters (крон Instant View): API_TOKEN или BACKEND_API_KEY
# API_TOKEN=Bearer ваш_токен
# или: API_TOKEN=ваш_api_key

# Для автоматического создания Instant View (Telegraph): получите токен один раз через npm run telegraph:account
# TELEGRAPH_ACCESS_TOKEN=

# Создание только по первому запросу: не задавайте ENABLE_INSTANT_VIEW_CRON или false
# Вариант Б — крон создаёт просмотры заранее: ENABLE_INSTANT_VIEW_CRON=true
# ENABLE_INSTANT_VIEW_CRON=false
# INSTANT_VIEW_CRON_INTERVAL_MINUTES=60
# INSTANT_VIEW_CRON_BATCH=20

# Админы (Telegram user id через запятую) — видят кнопку «Пересоздать просмотр» у глав
# ADMIN_USER_IDS=123456789